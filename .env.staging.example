# Staging Environment Configuration
# Copy this file to .env.staging and fill in the actual values

# Database Configuration
DB_NAME=KaopizAuthStaging
DB_USER=postgres
DB_PASSWORD=YOUR_STAGING_DATABASE_PASSWORD_HERE

# JWT Configuration
JWT_SECRET_KEY=YOUR_STAGING_JWT_SECRET_KEY_HERE
JWT_ISSUER=KaopizAuth-Staging
JWT_AUDIENCE=KaopizAuth-Users-Staging
JWT_ACCESS_TOKEN_EXPIRATION=30
JWT_REFRESH_TOKEN_EXPIRATION=14

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://staging.yourdomain.com

# API Configuration
API_URL=https://staging-api.yourdomain.com

# GitHub Container Registry
GITHUB_REPOSITORY=hoale240803/kaopiz

# Backup Configuration
BACKUP_DIR=/backups
RETENTION_DAYS=7

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_REQUEST_LOGGING=true
SLOW_REQUEST_THRESHOLD_MS=2000

# Security Configuration
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=200
RATE_LIMIT_BURST_SIZE=20

# Logging Configuration
LOG_LEVEL=Debug
SERILOG_MINIMUM_LEVEL=Debug

# Performance Configuration (Relaxed for staging)
API_MEMORY_LIMIT=256M
API_CPU_LIMIT=0.3
WEBAPP_MEMORY_LIMIT=128M
WEBAPP_CPU_LIMIT=0.2

# Database Performance (Relaxed for staging)
DB_MAX_CONNECTIONS=100
DB_SHARED_BUFFERS=128MB
DB_EFFECTIVE_CACHE_SIZE=512MB

# Redis Configuration
REDIS_MAX_MEMORY=128mb
REDIS_MAX_MEMORY_POLICY=allkeys-lru
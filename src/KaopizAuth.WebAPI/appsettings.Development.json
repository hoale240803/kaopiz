{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=kaopizauth.db",
    "RedisConnection": "localhost:6379"
  },
  "JWT": {
    "SecretKey": "your-super-secret-key-here-minimum-32-characters-long",
    "Issuer": "KaopizAuth",
    "Audience": "KaopizAuth",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}

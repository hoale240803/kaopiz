{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information",
      "KaopizAuth": "Information"
    }
  },
  "AllowedHosts": "*",
  "JWT": {
    "SecretKey": "${JWT_SECRET_KEY:staging-secret-key-minimum-32-characters-long}",
    "Issuer": "${JWT_ISSUER:KaopizAuth-Staging}",
    "Audience": "${JWT_AUDIENCE:KaopizAuth-Staging-Users}",
    "AccessTokenExpirationMinutes": "${JWT_ACCESS_TOKEN_EXPIRATION:15}",
    "RefreshTokenExpirationDays": "${JWT_REFRESH_TOKEN_EXPIRATION:7}"
  },
  "ConnectionStrings": {
    "DefaultConnection": "${CONNECTION_STRING:Host=localhost;Database=KaopizAuth_Staging;Username=postgres;Password=password}",
    "RedisConnection": "${REDIS_CONNECTION:localhost:6379}"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/staging-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId"
    ]
  },
  "HealthChecks": {
    "Enabled": true,
    "DatabaseTimeoutSeconds": 30,
    "DiskSpaceThresholdGB": 1,
    "MemoryThresholdMB": 500
  },
  "Performance": {
    "EnableMetrics": true,
    "MetricsEndpoint": "/metrics",
    "RequestLogging": {
      "Enabled": true,
      "LogSlowRequests": true,
      "SlowRequestThresholdMs": 500
    }
  },
  "Security": {
    "EnableSecurityHeaders": true,
    "EnableRateLimiting": true,
    "RateLimit": {
      "RequestsPerMinute": 200,
      "BurstSize": 20
    },
    "Cors": {
      "AllowedOrigins": "${CORS_ALLOWED_ORIGINS:http://localhost:3000,https://staging.your-domain.com}",
      "AllowCredentials": true
    }
  }
}
# Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# Database Configuration
DB_NAME=KaopizAuth
DB_USER=postgres
DB_PASSWORD=YOUR_SECURE_DATABASE_PASSWORD_HERE

# JWT Configuration
JWT_SECRET_KEY=YOUR_SUPER_SECURE_JWT_SECRET_KEY_HERE_AT_LEAST_256_BITS
JWT_ISSUER=KaopizAuth
JWT_AUDIENCE=KaopizAuth-Users
JWT_ACCESS_TOKEN_EXPIRATION=15
JWT_REFRESH_TOKEN_EXPIRATION=7

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API Configuration
API_URL=https://api.yourdomain.com

# GitHub Container Registry
GITHUB_REPOSITORY=hoale240803/kaopiz

# Backup Configuration
BACKUP_DIR=/backups
RETENTION_DAYS=30

# Monitoring Configuration
ENABLE_METRICS=true
ENABLE_REQUEST_LOGGING=true
SLOW_REQUEST_THRESHOLD_MS=1000

# Security Configuration
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=10

# SSL Configuration (for nginx)
SSL_CERTIFICATE_PATH=/etc/ssl/certs/server.crt
SSL_PRIVATE_KEY_PATH=/etc/ssl/certs/server.key

# Logging Configuration
LOG_LEVEL=Information
SERILOG_MINIMUM_LEVEL=Information

# Performance Configuration
API_MEMORY_LIMIT=512M
API_CPU_LIMIT=0.5
WEBAPP_MEMORY_LIMIT=256M
WEBAPP_CPU_LIMIT=0.25

# Database Performance
DB_MAX_CONNECTIONS=200
DB_SHARED_BUFFERS=256MB
DB_EFFECTIVE_CACHE_SIZE=1GB

# Redis Configuration
REDIS_MAX_MEMORY=256mb
REDIS_MAX_MEMORY_POLICY=allkeys-lru